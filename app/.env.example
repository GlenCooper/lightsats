# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

DATABASE_URL="postgres://user:password@localhost:5432/lightsats"

# default email config will use Mailhog
EMAIL_SERVER_USER=username
EMAIL_SERVER_PASSWORD=password
EMAIL_SERVER_HOST=localhost
EMAIL_SERVER_PORT=1025
EMAIL_FROM=noreply@example.com

# If you want to test LNURL-auth you can use a tunnel like ngrok
APP_URL=https://localhost:3000
NEXTAUTH_URL=https://localhost:3000
NEXTAUTH_SECRET=secret123

LNBITS_URL=https://legend.lnbits.com

# "Admin key" of the main lnbits wallet. You can use https://legend.lnbits.com/ for testing if you don't have your own instance :-)
LNBITS_API_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
# ID of main user in lnbits (visible in the url wallet?usr=....)
LNBITS_USER_ID=XXXXXXXXXXXXXXXXXX

# no longer used, the webhooks are unfortunately unreliable
#LNBITS_WEBHOOK_SECRET_KEY=12345

# optional dev settings
# enable to allow i18n to pick up changes to translation files. Note: you still need to refresh your browser after making a change.
#NEXT_PUBLIC_RELOAD_I18N=true

#NEXT_PUBLIC_SHOW_PRODUCTION_LINK=true

